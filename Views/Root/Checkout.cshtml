@section Scripts {
    <script src="~/lib/vue/dist/vue.js"></script>
    <script src="~/lib/axios/dist/axios.min.js"></script>
    <script src="~/lib/lodash/lodash.min.js"></script>
    <script src="~/js/filter.js"></script>
    <script src="~/js/checkout.js"></script>
}

<h2>Checkout</h2>
<div class="row" id="checkout">
    <div class="col-md-6 offset-md-3">
        <form name="theForm" class="m-1" v-on:submit.prevent="onSave()">
            <h3>Checkout</h3>
            <div class="form-group">
                <label for="" class="control-label">Your Name</label>
                <input type="text" class="form-control" v-model="customer.name" placeholder="e.g. Venky Venkataraman" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Phone Number</label>
                <input type="text" class="form-control" v-model="customer.phone" placeholder="353-087-1212" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address Line 1</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine1"  placeholder="123 Main Street" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address LIne 2</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine2" placeholder="" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address Line 3</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine3" placeholder="" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">City</label>
                <input type="text" class="form-control" v-model="customer.address.cityTown" placeholder="e.g. Dublin" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">State</label>
                <input type="text" class="form-control" v-model="customer.address.stateProvince" placeholder="e.g. Co. Dublin" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Zipcode</label>
                <input type="text" class="form-control" v-model="customer.address.postalCode" placeholder="D04FR60" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fa fa-arrow-right"></i> Next</button>
            </div>
        </form>
    </div>
</div>