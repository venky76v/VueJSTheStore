@section Scripts {
    <script src="~/lib/vue/dist/vue.js"></script>
    <script src="~/lib/axios/dist/axios.min.js"></script>
    <script src="~/lib/lodash/lodash.min.js"></script>
    <script src="~/lib/vee-validate/dist/vee-validate.js"></script>
    <script src="~/js/filter.js"></script>
    <script src="~/js/checkout.js"></script>
}

<h2>Checkout</h2>
<div class="row" id="checkout">
    <div class="col-md-6 offset-md-3">
        <form name="theForm" class="m-1" v-on:submit.prevent="onSave()">
            <h3>Checkout</h3>
            <div class="form-group">
                <label for="" class="control-label">Your Name</label>
                <input type="text" class="form-control" v-model="customer.name" :class="{'border-danger': errors.has('customerName')}" placeholder="e.g. Venky Venkataraman" name="customerName" v-validate="{ 'required': true, 'min': 5, 'max': 25 }" />
                <span class="text-danger" v-if="errors.has('customerName')">{{ errors.first('customerName') }}</span>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Phone Number</label>
                <input type="text" class="form-control" v-model="customer.phone" :class="{'border-danger': errors.has('phone')}" placeholder="353-087-1212" name="phone" v-validate="{ 'required': true }" />
                <span class="text-danger" v-if="errors.has('phone')">{{ errors.first('phone') }}</span>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address Line 1</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine1" :class="{'border-danger': errors.has('address1')}" placeholder="123 Main Street" name="address1" v-validate="{ 'required': true }" />
                <span class="text-danger" v-if="errors.has('address1')">{{ errors.first('address1') }}</span>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address LIne 2</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine2" placeholder="" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">Address Line 3</label>
                <input type="text" class="form-control" v-model="customer.address.addressLine3" placeholder="" />
            </div>
            <div class="form-group">
                <label for="" class="control-label">City</label>
                <input type="text" class="form-control" v-model="customer.address.cityTown" :class="{'border-danger': errors.has('phone')}" placeholder="e.g. Dublin" name="cityTown" v-validate="{ 'required': true }" />
                <span class="text-danger" v-if="errors.has('cityTown')">{{ errors.first('cityTown') }}</span>
            </div>
            <div class="form-group">
                <label for="" class="control-label">State</label>
                <input type="text" class="form-control" v-model="customer.address.stateProvince" :class="{'border-danger': errors.has('stateProvince')}" placeholder="e.g. Co. Dublin" name="stateProvince" v-validate="{ 'required': true }" />
                <span class="text-danger" v-if="errors.has('stateProvince')">{{ errors.first('stateProvince') }}</span>
            </div>
            <div class="form-group">
                <label for="" class="control-label">Zipcode</label>
                <input type="text" class="form-control" v-model="customer.address.postalCode" :class="{'border-danger': errors.has('postalCode')}" placeholder="D04FR60" name="postalCode" v-validate="{ 'required': true }" />
                <span class="text-danger" v-if="errors.has('postalCode')">{{ errors.first('postalCode') }}</span>
            </div>
            <div class="form-group">
                <button type="submit" :disabled="errors.any()" class="btn btn-success"><i class="fa fa-arrow-right"></i> Next</button>
            </div>
        </form>
    </div>
</div>